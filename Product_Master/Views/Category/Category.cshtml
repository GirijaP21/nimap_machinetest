@model IEnumerable<Product_Master.Models.clsCategory>
@{
    ViewBag.Title = "Category";
}

<h2>Category Master</h2>

<br>

<a href="@Url.Action("AddCat", "Category")" class="btn btn-primary">Create New Category</a>

<br>
<br>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit","Category", new {id = category.CategoryId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

